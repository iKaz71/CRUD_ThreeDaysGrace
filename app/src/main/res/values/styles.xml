<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo del hint (tÃ­tulo encima del campo) -->
    <style name="HintTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo del texto dentro del campo desplegable -->
    <style name="DropdownTextStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para botones principales -->
    <style name="ButtonStyleRed" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#B00020</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para el contenedor del formulario -->
    <style name="FormContainer">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">24dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

</resources>
